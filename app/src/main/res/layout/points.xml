<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center" >
	    <TextView
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="Pontuação"
	    	android:textSize="20dip"
	    	android:textStyle="bold"
	    	android:paddingTop="50dip"
	    	android:paddingBottom="10dip"
	    	android:id="@+id/labelPoints" />
    </LinearLayout>
	<LinearLayout
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" android:gravity="center_vertical">
    	<TextView
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="5/5"
	    	android:textSize="150dip"
	    	android:textStyle="bold"
	    	android:paddingBottom="30dip"
	    	android:id="@+id/points" android:layout_gravity="center"/>
	    <TextView
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="Congrats!"
	    	android:textSize="20dip"
	    	android:textStyle="bold"
	    	android:paddingBottom="30dip"
	    	android:id="@+id/etc" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>